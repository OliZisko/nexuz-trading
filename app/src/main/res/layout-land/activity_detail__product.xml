<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Detail_Product"
        android:id="@+id/layout_detalle_product"
        android:background="@color/background_gray"
        android:orientation="vertical"
        android:paddingBottom="16sp"
        android:paddingLeft="64dp"
        android:paddingRight="64dp"
        android:paddingTop="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/titulo"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="@color/text_white"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:text="Titulo"/>

        <ImageView
            android:id="@+id/imgFoto"
            android:layout_width="204dp"
            android:layout_height="235dp"
            android:layout_alignStart="@+id/titulo"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginTop="69dp"
            android:src="@drawable/camisa_rea" />

        <TextView
            android:id="@+id/descripcion"
            android:layout_width="370dp"
            android:layout_height="93dp"
            android:layout_above="@+id/history"
            android:layout_below="@+id/titulo"
            android:layout_alignEnd="@+id/titulo"
            android:layout_marginStart="28dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="101dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="90dp"
            android:layout_toEndOf="@+id/imgFoto"
            android:layout_toRightOf="@+id/imgFoto"
            android:text="Descripcion"
            android:textAlignment="center"
            android:textColor="@color/text_white"
            android:textSize="18sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgFoto"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:text="Historia"
            android:textStyle="bold"
            android:textColor="@color/text_white"
            android:textSize="18sp" />

    </RelativeLayout>
</ScrollView>